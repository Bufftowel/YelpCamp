<%- include("../partials/header.ejs") %>
<div class="container">
    <h1 class="text-center">Edit Comment</h1>
    <div style="width: 30%; margin: 30px auto;">    
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>/edit?_method=PUT" method="POST">
            <div class="form-group">
                <label for="commentText">Edit : </label>
                <textarea class="form-control" name="comment[text]" id="commentText" required><%= comment.text %></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit!" class="btn btn-primary btn-block">
            </div>
        </form>
        <a href="/campgrounds/<%= campground_id %>">Go Back</a>
    </div>
</div>
<%- include("../partials/footer.ejs") %>