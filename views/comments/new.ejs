<%- include("../partials/header.ejs") %>
<div class="container">
    <h1 class="text-center">Add New Comment to <%= campground.name %></h1>
    <div style="width: 30%; margin: 30px auto;">    
        <form action="/campgrounds/<%= campground.id %>/comments" method="POST">
            <div class="form-group">
                <label for="comment">Name : </label>
                <input class="form-control" type="text" name="comment[author]" id="commentAuthor" required>
            </div>
            <div class="form-group">
                <label for="commentText">Comment : </label>
                <textarea class="form-control" name="comment[text]" id="commentText" required></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit!" class="btn btn-primary btn-block">
            </div>
        </form>
        <a href="/campgrounds/<%= campground.id %>">Go Back</a>
    </div>
</div>
<%- include("../partials/footer.ejs") %>