<%- include("partials/header.ejs") %>
<div class="container mt-3">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to CampGrounds</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <div>
                <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New CampGrounds</a>
            </div>
        </div>
    </header>  
    <p>This is the CampGrounds page!</p>
    <h2>CampGorunds : </h2>
    <div class="row">
        <% campgrounds.forEach(element => { %>
            <div class="col-md-4 col-sm-6 col-lg-3">
                <div class="card">
                    <img class="card-img-top" src="<%=element.image%>">   
                    <div class="card-body text-center">                   
                        <h4 class="card-title"><%= element.name %></h4>  
                        <a href="/campgrounds/<%= element._id %>" class="btn btn-primary">Show More</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<%- include("partials/footer.ejs") %>