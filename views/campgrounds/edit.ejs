<%- include("../partials/header.ejs") %>
<div class="container">
    <h1 class="text-center">Edit <%= campground.name %> </h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="groundName">Name : </label>
                <input class="form-control" type="text" name="groundName" id="groundName" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <label for="groundName">Price : </label>
                <input class="form-control" type="number" min="0.01" step="0.01" name="groundPrice" id="groundName" value="<%= campground.price %>">
            </div>
            <div class="form-group">
                <label for="groundImage">Image : </label>
                <input class="form-control" type="url" name="groundImage" id="groundImage" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <label for="groundText">Desciption : </label>
                <textarea class="form-control" name="groundText" id="groundText"><%= campground.description %></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit!" class="btn btn-primary btn-block">
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Go Back</a>
    </div>
</div>
<%- include("../partials/footer.ejs") %>